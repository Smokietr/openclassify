{% for adv in params.featured_advs %}
    <div class="col-6 col-md-12 mb-2 list-classified bg-light aditem-wrapper doping-type-2">
        <a href="{{ adv.detail_url }}" class="text-dark">
            <div class="row bg-light doping_type2">
                <div class="col-md-2 justify-content-center align-self-center text-center border-right border-white">
                    <div class="d-inline-block position-relative overflow-hidden">
                        <img class="img-thumbnail" src="{{ adv.cover_photo }}" alt="{{ adv.name }}" style="max-height:80px;">
                        <span class="position-absolute showcase-sticker">
                            {{ trans('visiosoft.module.dopings::field.showcase') }}
                        </span>
                    </div>
                </div>
                <div class="col-md-7 justify-content-center align-self-center border-right border-white">
                    <div class="row">
                        <div class="col-md-12">
                            <p>{{ adv.name }}</p>
                        </div>
                        <div class="col-md-12 text-truncate d-none d-md-block">
                            <small class="text-muted">{{ adv.cat1_name }}, {{ adv.cat2_name }}</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 text-left justify-content-center align-self-center">
                    <div class="row price-location">
                        <div class="col-md-12 {{ setting_value('visiosoft.module.advs::price_area_hidden') ? 'hidden' }}">
                            <b>{{ adv.price.currency }}</b>
                        </div>
                        {% if setting_value('visiosoft.module.location::list_page_location') %}
                            <div class="col-md-12 justify-content-center align-self-center text-truncate">
                                <small>{{ adv.city_name }} {{ adv.country_name }}</small>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </a>
        <div class="row mb-2">
            <div class="col-md-2"></div>
            <div class="col-md-7 justify-content-center align-self-center border-right border-white">
                {{ addBlock('list/extra-actions', {'ad': adv})|raw }}
            </div>
        </div>
    </div>
{% endfor %}
<script>
    var showcase = `<div class="listing-top-message w-100 mb-2 text-center py-2">
        <a href="{{ url_route('profile::ads') }}">{{ trans(setting_value('visiosoft.module.dopings::listing-ad-text')) }}</a></div>`;
    var type_class = '.doping-type-2', showcase_class = '.products-list';
</script>
{{ asset_script('visiosoft.module.dopings::js/showcase-ad.js') }}
{{ asset_add('styles.css','visiosoft.module.dopings::css/dopings.css') }}